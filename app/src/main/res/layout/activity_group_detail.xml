<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <import type="android.view.View"/>
        <variable
            name="linkGroup"
            type="com.chanyoung.jack.data.model.LinkGroup" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme"
        android:background="@color/white"
        android:padding="20dp"
        tools:context=".ui.activity.GroupDetailActivity">

        <TextView
            android:id="@+id/group_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{linkGroup.name}"/>

        <TextView
            android:id="@+id/group_detail_linkCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_detail_title"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:text="@{String.valueOf(linkGroup.linkCount) + ` Link`}"/>

        <FrameLayout
            android:id="@+id/group_detail_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/group_detail_linkCount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/group_detail_search_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="40dp"
                android:paddingEnd="5dp"
                android:background="@drawable/edit_text_custom"
                android:autofillHints="name"
                android:inputType="text"
                android:hint="@string/search"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_marginStart="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_search_24"
                android:contentDescription="@string/content_description"/>

        </FrameLayout>

        <View
            android:id="@+id/group_detail_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_detail_frame"
            android:layout_marginTop="20dp"
            android:background="#D3A4A4A4"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/group_detail_rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/group_detail_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/group_detail_place_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/group_detail_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/empty_place_holder"
            android:textColor="#99A4A4A4"
            android:textStyle="bold"
            android:textSize="16sp"
            android:visibility="@{linkGroup.linkCount == 0 ? View.VISIBLE : View.GONE}"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

